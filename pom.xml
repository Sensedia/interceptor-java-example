								<exclude>com/sensedia/classloader/test1/*.java</exclude>
								<exclude>com/sensedia/classloader/test2/InterceptorClassTest3.java</exclude>
								<exclude>com/sensedia/classloader/test3/*.java</exclude>
								<exclude>com/sensedia/classloader/test4/*.java</exclude>
								<exclude>com/sensedia/classloader/test5/*.java</exclude>
								<exclude>com/sensedia/classloader/test6/*.java</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
