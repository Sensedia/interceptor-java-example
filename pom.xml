		<!-- Jar with non White/BlackListed Dependencies -->
		<profile>
			<id>test4</id>
			<dependencies>
				<dependency>
					<groupId>org.apache.commons</groupId>
					<artifactId>commons-csv</artifactId>
					<version>1.2</version>
				</dependency>
			</dependencies>
			<build>
				<finalName>java-interceptor-example-4</finalName>
